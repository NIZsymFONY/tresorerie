{% extends 'base.html.twig' %}

{% block body %}

<div class="toolbar row">
    <div class="col-sm-6 hidden-xs">
        <div class="page-header">
            <h1>DÃ©tail transaction</h1>
        </div>
    </div>                          
</div>
<br>
<div class="row">
    <div class="col-md-12">
        <!-- start: DYNAMIC TABLE PANEL -->
        <div class="panel panel-white">
            <div class="panel-heading">
                <div class="panel-tools">
                    <div class="dropdown">
                        <a data-toggle="dropdown" class="btn btn-xs dropdown-toggle btn-transparent-grey">
                            <i class="fa fa-cog"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-light pull-right" role="menu">
                            <li>
                                <a class="panel-collapse collapses" href="#"><i class="fa fa-angle-up"></i> <span>Collapse</span> </a>
                            </li>                            
                            <li>
                                <a class="panel-expand" href="#">
                                    <i class="fa fa-expand"></i> <span>Fullscreen</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="panel-body">  

                <table>
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ transaction.id }}</td>
                        </tr>
                        <tr>
                            <th>Title</th>
                            <td>{{ transaction.title }}</td>
                        </tr>
                        <tr>
                            <th>Amount</th>
                            <td>{{ transaction.amount }}</td>
                        </tr>
                        <tr>
                            <th>Isinput</th>
                            <td>{% if transaction.isInput %}Yes{% else %}No{% endif %}</td>
                        </tr>
                        <tr>
                            <th>Description</th>
                            <td>{{ transaction.description }}</td>
                        </tr>
                        <tr>
                            <th>Isvalid</th>
                            <td>{% if transaction.isValid %}Yes{% else %}No{% endif %}</td>
                        </tr>
                        <tr>
                            <th>Createdat</th>
                            <td>{% if transaction.createdAt %}{{ transaction.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                        </tr>
                        <tr>
                            <th>Updatedat</th>
                            <td>{% if transaction.updatedAt %}{{ transaction.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                        </tr>
                    </tbody>
                </table>

                <ul>
                    <li>
                        <a href="{{ path('transaction_index') }}">Back to the list</a>
                    </li>
                                      
                </ul>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block body %}
<div class="toolbar row">
    <div class="col-sm-6 hidden-xs">
        <div class="page-header">
            <h1>Ajouter une transaction</h1>
        </div>
    </div>                          
</div>
<br>
<div class="row">
    <div class="col-md-12">
        <!-- start: DYNAMIC TABLE PANEL -->
        <div class="panel panel-white">
            <div class="panel-heading">
                <div class="panel-tools">
                    <div class="dropdown">
                        <a data-toggle="dropdown" class="btn btn-xs dropdown-toggle btn-transparent-grey">
                            <i class="fa fa-cog"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-light pull-right" role="menu">
                            <li>
                                <a class="panel-collapse collapses" href="#"><i class="fa fa-angle-up"></i> <span>Collapse</span> </a>
                            </li>                            
                            <li>
                                <a class="panel-expand" href="#">
                                    <i class="fa fa-expand"></i> <span>Fullscreen</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="panel-body">                

                {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
                
                    <div class="form-group">
                        <div class="col-sm-12">
                            <label class="col-sm-2 control-label" for="form-field-1">
                                Title
                            </label>
                            <div class="col-sm-9">
                                {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-12">
                            <label class="col-sm-2 control-label" for="form-field-1">
                                Amount
                            </label>
                            <div class="col-sm-9">
                                {{ form_widget(form.amount, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-12">
                            <label class="col-sm-2 control-label" for="form-field-1">
                                Is Input
                            </label>
                            <div class="col-sm-9">
                                {{ form_widget(form.isInput, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-12">
                            <label class="col-sm-2 control-label" for="form-field-1">
                                Description
                            </label>
                            <div class="col-sm-9">
                                {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-12">
                            <label class="col-sm-2 control-label" for="form-field-1">
                                Is valid
                            </label>
                            <div class="col-sm-9">
                                {{ form_widget(form.isValid, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-12">
                            <label class="col-sm-2 control-label" for="form-field-1">
                                Category
                            </label>
                            <div class="col-sm-9">
                                {{ form_widget(form.category, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-12">
                            <label class="col-sm-2 control-label" for="form-field-1">
                                Tags
                            </label>
                            <div class="col-sm-9">
                                {{ form_widget(form.tag, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-4 col-sm-offset-4">
                            <button type="submit" class="btn btn-blue btn-block">
                                Ajouter <i class="fa fa-arrow-circle-right"></i>
                            </button>
                        </div>
                    </div>   
                {{ form_rest(form) }}
                {{ form_end(form) }}

                <ul>
                    <li>
                        <a href="{{ path('transaction_index') }}">Back to the list</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

{% endblock %}

{% extends 'base.html.twig' %}

{% block body %}

<div class="toolbar row">
    <div class="col-sm-6 hidden-xs">
        <div class="page-header">
            <h1>Gestion des categories</h1>
        </div>
    </div>                          
</div>
<br>
<div class="row">
    <div class="col-md-12">
        <!-- start: DYNAMIC TABLE PANEL -->
        <div class="panel panel-white">
            <div class="panel-heading">
                <div class="panel-tools">
                    <div class="dropdown">
                        <a data-toggle="dropdown" class="btn btn-xs dropdown-toggle btn-transparent-grey">
                            <i class="fa fa-cog"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-light pull-right" role="menu">
                            <li>
                                <a class="panel-collapse collapses" href="#"><i class="fa fa-angle-up"></i> <span>Collapse</span> </a>
                            </li>                            
                            <li>
                                <a class="panel-expand" href="#">
                                    <i class="fa fa-expand"></i> <span>Fullscreen</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-md-12 space20">
                <a class="btn btn-azure" href="{{ path('category_new') }}">
                    Ajouter un nouvelle category <i class="fa fa-plus"></i>
                </a>
                
            </div>
            <div class="panel-body">
                <table class="table table-striped table-bordered table-hover table-full-width" id="sample_1">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Title</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for category in categories %}
                        <tr>
                            <td><a href="{{ path('category_show', { 'id': category.id }) }}">{{ category.id }}</a></td>
                            <td>{{ category.title }}</td>
                            <td>
                                <ul>
                                    <li>
                                        <a href="{{ path('category_show', { 'id': category.id }) }}">show</a>
                                    </li>
                                    <li>
                                        <a href="{{ path('category_edit', { 'id': category.id }) }}">edit</a>
                                    </li>
                                    <li>
                                        <a href="{{ path('category_delete', { 'id': category.id }) }}">delete</a>
                                    </li>
                                </ul>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        <!-- end: DYNAMIC TABLE PANEL -->
    </div>
</div>   

{% endblock %}
